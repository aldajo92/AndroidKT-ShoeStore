<?xml version="1.0" encoding="utf-8"?><!--Constraint layout used due -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--LinearLayout chosen due to the simple vertical and center orientation selected for UI components in the design-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        tools:context=".fragments.instruction.InstructionFragment">

        <TextView
            android:id="@+id/text_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome.title"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_normal"
            android:text="@string/welcome.detail"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/text_ready_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_normal"
            android:text="@string/welcome.enter"
            android:textSize="@dimen/font_normal" />

        <Button
            android:id="@+id/button_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_normal"
            android:text="@string/welcome.next" />

    </LinearLayout>

</layout>
